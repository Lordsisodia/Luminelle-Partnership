{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client", "node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@blog/*": ["src/domains/blog/*"],
      "@admin/*": ["src/domains/admin/*"],
      "@client/*": ["src/domains/client/*"],
      "@creator/*": ["src/domains/creator/*"],
      "@platform/*": ["src/domains/platform/*"],
      "@ui-kit/*": ["src/domains/ui-kit/*"],
      "@admin/settings-siso/*": ["src/domains/admin/settings-siso/*"],
      "@content/*": ["src/content/*"],
      "@utils/*": ["src/utils/*"],
      "@layouts/*": ["src/layouts/*"],
      "@ui/*": ["src/ui/*"],
      "@ui-lib/*": ["../components-library/packages/ui/dist/*"]
    },

    /* Linting */
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/domains/**/ui/**/*",
    "src/lib/**/*",
    "src/ui/**/*",
    "src/content/**/*",
    "src/theme/**/*"
  ],
  "exclude": []
}
